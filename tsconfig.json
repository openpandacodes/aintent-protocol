// tsconfig.json

{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "types": ["jest", "node"]
    },
    "include": ["src", "tests", "chat-engine"],
    "exclude": ["node_modules", "dist"]
  }
  